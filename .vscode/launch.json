{
    "version": "0.2.0",
    "configurations": [
        {
            "python": "${workspaceFolder}/api/venv/bin/python",
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "--app",
                "cping_api",
                "run",
                "--debug",
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}